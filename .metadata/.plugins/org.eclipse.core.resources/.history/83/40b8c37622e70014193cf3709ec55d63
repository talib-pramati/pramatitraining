package test;

import java.io.File;

public class TestingFile {
	
	public static void main(String[] args)
	{
		boolean dirFlag = false;
		File dir = new File("C://mails");
		
		try
		{
			dirFlag = dir.mkdir();
		}
		
		catch(Exception exc)
		{
			exc.printStackTrace();
		}
		
		if(dirFlag)
		
		System.out.println(dir.getAbsolutePath());
		
		
	}

}
